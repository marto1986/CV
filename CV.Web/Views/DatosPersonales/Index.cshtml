@model List<DatosPersonalesDTO>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <br /><br /><br />
    <br /><br /><br />
    <div class="row">
        <h2>¡¡¡Empecemos a completar el CV para conseguir el trabajo que queres!!!</h2>
        <div class="row">
            <span><i class="fa fa-hand-o-right fa-3x"></i></span> <a href="@Url.Action("Nuevo", "DatosPersonales")"><input type="button" class="btn btn-lg btn-default" value="Cargar" /></a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellido</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var datos in Model)
            {
                    <tr>
                        <td>@datos.Nombres</td>
                        <td>@datos.Apellido</td>
                        <td>@datos.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
