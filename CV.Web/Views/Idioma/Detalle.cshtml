@model IdiomaDTO

<div class="container wow fadeInUp">
    <div class="row">

        <div class="col-lg-12 col-sm-12 text-capitalize">
            <div class="col-sm-12">
                <a href="@Url.Action("Index", "Idioma")"><p class="btn btn-lg btn-primary text-uppercase"><i class="fa fa-chevron-circle-left"></i> Volver</p></a>
                <a href="@Url.Action("Actualizar", "Idioma", new { id = Model.IdiomaId})"><p class="btn btn-outline-dark btn-lg text-uppercase"><i class="fa fa-edit"></i> Editar</p></a>
            </div>

            <div class="card col-lg-12 col-sm-12">
                <div class="card-header text-center">
                    <i class="fa fa fa-globe fa-2x"></i> Idioma: @Model.Descripcion
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="fa fa-pencil fa-2x"></i> Nivel Escrito: @Model.NivelEscrito</li>
                    <li class="list-group-item"><i class="fa fa-comment fa-2x"></i> Nivel Oral: @Model.NivelOral</li>
                </ul>
            </div>
        </div>
    </div>
</div>