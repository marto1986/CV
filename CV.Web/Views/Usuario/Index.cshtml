
@{
    ViewBag.Title = "Index";
}
<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">Ingresar</h3>
            <div class="card-text">
                <form action="@Url.Action("IniciarSesion", "Usuario")" method="post">
                    <div class="form-group">
                        <label>Usuario:</label>
                        <input type="text" name="UsuarioNombre" class="form-control form-control-sm" />
                    </div>
                    <div class="form-group">
                        <label>Contraseña:</label>
                        <input type="password" name="UsuarioPassword" class="form-control form-control-sm" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Ingresar" />
                    </div>
                    <div class="sign-up">
                        ¿No estás registrado? <a href="@Url.Action("Registrarse", "Usuario")">Registrate</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

