@model ExperienciaLaboralDTO
@{
    ViewBag.Title = "Index";
}

<section id="two" class="bg-alt">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-xs-center">
                @if (ViewBag.ObjUsuario != null)
                {
                    <h2>Bienvenido <span class="text-success">@ViewBag.ObjUsuario.UsuarioNombre</span>, Empecemos a completar el CV.</h2>
                }

                <h3 class="m-t-0 text-primary">Impulsá tu carrera profesional</h3>
                <h4>Datos Personales</h4>
                @if (Model != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Puesto</th>
                                <th>Descripción</th>
                                <th>Ver</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Puesto</td>
                                <td>@Model.Descripcion</td>
                                <td><a href="@Url.Action("Detalle", "ExperienciaLabotal", new { id = Model.ExperienciaLaboralId })"><i class="fa fa-eye fa-2x"></i></a></td>
                                <td><a href="@Url.Action("Actualizar", "ExperienciaLabotal", new { id = Model.ExperienciaLaboralId})"><i class="fa fa-edit fa-2x text-success"></i></a></td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="@Url.Action("Nuevo", "ExperienciaLabotal")" class="btn btn-primary btn-xl page-scroll wow fadeInUp">Completar Experiencia Laboral <i class="fa fa-user-plus"></i></a>
                }
                else
                {
                    <a href="@Url.Action("Nuevo", "ExperienciaLabotal")" class="btn btn-primary btn-xl page-scroll wow fadeInUp">Completar Idioma <i class="fa fa-user-md"></i></a>
                }
                <hr class="primary">
            </div>
        </div>
    </div>
</section>