@model ImagenDTO
@{
    ViewBag.Title = "Index";
}

<section id="two" class="bg-alt">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-xs-center">
                @if (ViewBag.ObjUsuario != null)
                {
                    <h2>Bienvenido <span class="text-success">@ViewBag.ObjUsuario.UsuarioNombre</span>, Empecemos a completar el CV.</h2>
                }

                <h3 class="m-t-0 text-primary">Impulsá tu carrera profesional</h3>
                <h4>Imagen</h4>
                @if (Model != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nombres</th>
                                <th>Ver</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><img class="figure-img" src="~/Content/Imagenes/Upload/@Model.Nombre" alt="@Model.Nombre" title="@Model.Nombre" /></td>
                                <td><a href="@Url.Action("Detalle", "Imagen", new { id = Model.ImagenId})"><i class="fa fa-eye fa-2x"></i></a></td>
                                <td><a href="@Url.Action("Actualizar", "Imagen", new { id = Model.ImagenId})"><i class="fa fa-edit fa-2x text-success"></i></a></td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="@Url.Action("Index", "PDF")" class="btn btn-primary btn-xl page-scroll wow fadeInUp">Ver CV <i class="fa fa-file-pdf-o"></i></a>
                }
                else
                {
                    <p class="text-capitalize alert alert-warning text-center">No tiene una imagen cargada.</p>
                    <hr class="primary">
                    <p><a href="@Url.Action("Nuevo", "Imagen")" class="btn btn-primary btn-xl page-scroll wow fadeInUp">Cargar Imagen <i class="fa fa-image"></i></a></p>
                }
                <hr class="primary">
            </div>
        </div>
    </div>

</section>